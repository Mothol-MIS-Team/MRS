<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MRS_Store.Views.POS.POSControls.Transaction"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="MRS_Store.Views.POS.POSControls.Transaction.Entries"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid VerticalAlignment="Top" HorizontalAlignment="Left" >
            <DataGrid.Columns>
                <materialDesign:DataGridTextColumn Header="Product" HeaderStringFormat="Product"/>
                <materialDesign:DataGridTextColumn Header="Quantity" HeaderStringFormat="Quantity"/>
                <materialDesign:DataGridTextColumn  Header="Price" HeaderStringFormat="Price"/>
                <materialDesign:DataGridTextColumn  Header="Discount" HeaderStringFormat="Discount"/>
                <materialDesign:DataGridTextColumn  Header="Total" HeaderStringFormat="Total"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
